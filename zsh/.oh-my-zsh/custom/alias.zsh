# Better defaults
alias md='mkdir -p'
alias rm='rm -rf'

# -h for human-readable sizes
alias df='df -h'
alias du='du -h'
alias free='free -h'

# Git root
alias gr='cd ./$(git rev-parse --show-cdup)'

# Vim
alias v='vim'
alias vimrc='vim ~/.vimrc'

# Misc
alias yt='youtube-dl'
alias grip='grip -b'
alias tx='tmuxinator'
